<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ntpuee1.ntpuee.Main2Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Navigation"
        android:id="@+id/NaviButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="naviButtClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Bulletin Board"
        android:id="@+id/BulletinBoardButton"
        android:layout_below="@+id/NaviButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/NaviButton"
        android:layout_alignEnd="@+id/NaviButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Club Discussion"
        android:id="@+id/ClubDisButton"
        android:layout_below="@+id/BulletinBoardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BulletinBoardButton"
        android:layout_alignEnd="@+id/BulletinBoardButton"
        android:onClick="ClubButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Class Discussion"
        android:id="@+id/ClassDisButtion"
        android:layout_below="@+id/ClubDisButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ClubDisButton"
        android:layout_alignEnd="@+id/ClubDisButton" />
</RelativeLayout>
